<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgoround2">

    <ImageView
        android:id="@+id/image_result"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/cup" />

    <TextView
        android:id="@+id/txt_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 100"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_below="@+id/image_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Score"
        android:layout_marginTop="50dp"
        android:paddingTop="20dp"
        android:weightSum="2">


        <Button
            android:id="@+id/Button_Thoat"
            android:layout_width="393dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_2"
            android:text="ThoÃ¡t"
            android:textColor="#03A9F4"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button_3"
        android:src="@drawable/backgoround2"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</RelativeLayout>
